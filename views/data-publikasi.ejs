  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" type="text/css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css">
  <link rel="icon" href="/public/favicon.ico">

  <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <title>Publikasi</title>
  </head>
  <body>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <!-- header start -->
    <%- include('header'); -%>
    <!-- header end   -->
    

    <style>
      .nav-link:hover{
        background-color: gray;
      }
      .dtHorizontalVerticalExampleWrapper {
          max-width: 600px;
          margin: 0 auto;
        }
        #dtHorizontalVerticalExample th, td {
          white-space: nowrap;
        }
        table.dataTable thead .sorting:after,
        table.dataTable thead .sorting:before,
        table.dataTable thead .sorting_asc:after,
        table.dataTable thead .sorting_asc:before,
        table.dataTable thead .sorting_asc_disabled:after,
        table.dataTable thead .sorting_asc_disabled:before,
        table.dataTable thead .sorting_desc:after,
        table.dataTable thead .sorting_desc:before,
        table.dataTable thead .sorting_desc_disabled:after,
        table.dataTable thead .sorting_desc_disabled:before {
          bottom: .5em;
        }
    </style>

    <div class="row g-0 mt-5" style="min-height: calc(100vh - 50px);">
      <!-- header start -->
      <%- include('sidebar'); -%>
      <!-- header end   -->
  
      <div class="col-md-10 p-5 pt-5">
        <h4><i class="fa-solid fa-book ms-2"></i>&nbsp&nbspPUBLIKASI</h4><hr>
        <a href="/tambah_data/tambah-data-publikasi" class="btn btn-primary mb-3 "><i class="fa-solid fa-pen-to-square"></i>Tambah Data</a>
        <!-- First Row -->
        <table id="dtHorizontalVerticalExample" class="table table-striped table-bordered table-sm " cellspacing="0"
          width="100%">
          <thead>
            <tr>
              <th scope="col" class="text-center">No</th>
              <th scope="col" class="text-center">Judul Publikasi</th>
              <th scope="col" class="text-center">File (.pdf)</th>
              <th scope="col" class="text-center">Tanggal Upload</th>
              <th scope="col" class="text-center">Aksi</th>
              <!-- <th scope="col" class="text-center">Aksi</th>
              <th scope="col" class="text-center">Aksi</th> -->
            </tr>
          </thead>
          <tbody>
            <tr>
              <% var number = 1; %>
              <% for (let row of rows) {%>
              <td scope="row" class="text-center" ><%= number %></td>
              <td scope="row" class="text-center" ><%= row.judul_publish %></td>
              <td scope="row" class="text-center" >PDF</td>
              <td scope="row" class="text-center" ><%= row.tanggal_terbit %></td>
              <td scope="row" class="text-center">
                <button class="border-0" data-bs-toggle="modal" data-bs-target="#exampleModal" ><i class="fa-solid fa-users-rectangle bg-primary p-2 text-white rounded" data-toggle="tooltip" title="Detail"></i></button>
                <a  href="javascript:void()"
                data-judul="<%= row.judul_publish %>"
                data-tanggal_terbit="<%= row.tanggal_terbit %>"
                data-file_article="<%= row.file_article %>"
                >
                  <button class="border-0"><i class="fa-solid fa-pen-to-square bg-success p-2 text-white rounded" data-toggle="tooltip" title="Edit"></i></button></a>
                <a  href="/data/data-publikasi/delete/<%= row.id_publish %>"><button class="border-0" data-bs-toggle="modal" data-bs-target="#exampleModalDelete" data-toggle="tooltip" title="Delete"><i class="fa-solid fa-trash-can bg-danger p-2 text-white rounded" data-toggle="tooltip" title="Delete"></i></button></a> 
              </td>
              <% number++; %>
            </tr>
            <% }%>
          </tbody>
        </table>        
      </div>
    </div>

    

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><img src="https://img.icons8.com/external-sbts2018-flat-sbts2018/58/000000/external-detail-basic-ui-elements-2.3-sbts2018-flat-sbts2018.png"/>Detail Data</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            Apakah anda sudah memastikan inputan data benar?
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kembali</button>
            <button type="button" class="btn btn-primary">Simpan</button>
            </div>
        </div>
        </div>
      </div>

      <!-- Modal Edit -->
      <div class="modal fade" id="modalEdit" tabindex="-1" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabelEdit">Edit Data Publikasi</h5>
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body table-responsive">
            <table class="table table-bordered no-margin">
              <tbody>
                <% for (let row of rows) {%>
                <tr>
                    <tr>
                      <th style="width:100%"> <label>Judul Publikasi</label></th>
                      <td style="width:100%"><input type="text" name="judul_publish" value="<%= row.judul_publish %>" class="h-100"></td>
                    </tr>
                    <tr>
                      <th style="width:100%"><label>Tanggal Terbit</label></th>
                      <td style="width:100%"><input type="text" name="tanggal_terbit" value="<%= row.tanggal_terbit %>" class=""></td>
                    </tr>
                    <tr>
                      <th style="width:50%"><label>Upload File</label></th>
                      <td style="width:80%"><input type="file" name="file_article" value="<%= row.file_article%>"  class=""></td>
                    </tr>
                 </tr>
                </tbody>
                <% }%>
            </table>
          </div>

          <div class="modal-footer">

            <button type="submit" class="btn btn-primary">Simpan</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
      </div>

    



      <!-- footer start -->
      <%- include('footer'); -%>
      <!-- footer end   -->

      <script>
        $(document).ready(function () {
        $('#dtHorizontalVerticalExample').DataTable({
          "scrollX": true,
          "scrollY": 200,
        });
        $('.dataTables_length').addClass('bs-select');
        });
         

      </script>
    
