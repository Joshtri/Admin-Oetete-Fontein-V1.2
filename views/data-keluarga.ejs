  <body>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <!-- header start -->
    <%- include('header'); -%>
    <!-- header end   -->

    <style>
      .nav-link:hover{
        background-color: gray;
      }
    </style>

    <div class="row g-0 mt-5" style="min-height: calc(100vh - 50px);">
      <!-- header start -->
      <%- include('sidebar'); -%>
      <!-- header end   -->
      <div class="col-md-10 p-5 pt-5">
        <h4><i class="fa-solid fa-users"></i>&nbsp&nbspDATA KELUARGA</h4><hr>
        <a href="/tambah_data/tambah-data-keluarga" type="button" class="btn btn-primary mb-3 "><i class="fa-solid fa-pen-to-square"></i>Tambah Data</a>
        <!-- First Row -->
        <table id="dtHorizontalVerticalExample" class="table table-striped table-bordered table-sm " cellspacing="0"
          width="100%">
          <thead>
            <tr>
              <th scope="col" class="text-center">No</th> 
              <th scope="col" class="text-center">Nomor KK</th>
              <th scope="col" class="text-center">Kepala Keluarga</th>
              <th scope="col" class="text-center">Alamat</th>
              <th scope="col" class="text-center">Aksi</th>
    
            </tr>
          </thead>
          <tbody>
            <tr>
              <% var number = 1; %>
              <% for (let row of rows) {%>
              <td scope="row" class="text-center"><%= number %></td>
              <td scope="row" class="text-center"><%= row.no_kk %></td>
              <td scope="row" class="text-center"><%= row.kepala_kel %></td>
              <td scope="row" class="text-center"><%= row.alamat %></td>
              <td scope="row" class="text-center">
                <!-- menambah JSON.stringify(row) ke atribut data-json untuk diakses dari modal -->
                <!-- setiap data json memiliki nilai berbeda mengikuti variabel row -->
                <button type="button"
                class="border-0"
                data-bs-toggle="modal"
                data-bs-target="#exampleModal" 
                data-json="<%= JSON.stringify(row) %>"
                ><i class="fa-solid fa-users-rectangle bg-primary p-2 text-white rounded" data-toggle="tooltip" title="Detail"></i></button>
                <button class="border-0"><i class="fa-solid fa-pen-to-square bg-success p-2 text-white rounded" data-toggle="tooltip" title="Edit" data-bs-toggle="modal" data-bs-target="#exampleModalEdit"></i></button>
                <a href="/data/data-keluarga/delete/<%= row.no_kk %>"><button class="border-0"><i class="fa-solid fa-trash-can bg-danger p-2 text-white rounded" data-toggle="tooltip" title="Delete"></i></button></a>
              </td>
              <% number++; %>
            </tr>
            <% }%>
          </tbody>
        </table>
      </div>
    </div>


         <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered"">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Detail Keluarga</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body table-responsive">
        <table class="table table-bordered no-margin">
        <tbody>
          <!-- <tr>
            <th style="width:50%">Id KK</th>
            <td>KK010202</td>
          </tr> -->
          <tr>
            <th style="width:50%">No KK</th>
            <!-- target binding ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ -->
            <td class="no_kk"></td>
          </tr>
          <tr>
            <th style="width:50%">Kepala Keluarga</th>
            <td class="kepala_kel"></td>
          </tr>
          <tr>
            <th style="width:50%">RT</th>
            <td class="rt"></td>
          </tr>
          <tr>
            <th style="width:50%">RW</th>
            <td class="rw"></td>
          </tr>
          <tr>
            <th style="width:50%">Kelurahan</th>
            <td class="kel_n_desa"></td>
          </tr>
          <tr>
            <th style="width:50%">Kecamatan</th>
            <td class="kecamatan"></td>
          </tr>          
          <tr>
            <th style="width:50%">Kota/Kabupaten</th>
            <td class="kota_n_kab"></td>
          </tr>
          <tr>
            <th style="width:50%">Provinsi</th>
            <td class="provinsi"></td>
          </tr>

          
        </tbody>
      </table>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



<!-- Modal Delete-->
<div class="modal fade" id="exampleModalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabelDelete">Hapus Data</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
