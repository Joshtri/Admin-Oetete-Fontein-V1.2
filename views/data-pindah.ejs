  <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
  <title>Data Pindah</title>
</head>

<body>
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
  <!-- header start -->
  <%- include('header'); -%>
    <!-- header end   -->

    <style>
      .nav-link:hover {
        background-color: gray;
      }
    </style>

    <div class="row g-0 mt-5" style="min-height: calc(100vh - 50px);">
      <!-- header start -->
      <%- include('sidebar'); -%>
        <!-- header end   -->
        <div class="col-md-10 p-5 pt-5">
          <h3><i class="fa-solid fa-cloud-arrow-down"></i>&nbsp&nbspDATA PINDAH KELUAR</h3>
          <hr>
          <a href="/tambah_data/tambah-data-pindah" class="btn btn-primary mb-3 "><i
              class="fa-solid fa-pen-to-square"></i>Tambah Data</a>
          <!-- First Row -->
          <table id="dtHorizontalVerticalExample" class="table table-striped table-bordered table-sm " cellspacing="0"
            width="100%">
            <thead>
              <tr>
                <th scope="col" class="text-center">No</th>
                <!-- <th scope="col" class="text-center">Id Pindah</th> -->
                <th scope="col" class="text-center">NIK</th>
                <th scope="col" class="text-center">Tanggal Pindah</th>
                <th scope="col" class="text-center">Nomor KK</th>
                <th scope="col" class="text-center">Alasan</th>
                <th scope="col" class="text-center">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% var number=1; %>
                  <% for (let row of rows) {%>
                    <td scope="row" class="text-center">
                      <%= number %>
                    </td>
                    <td scope="row" class="text-center">
                      <%= row.penduduk_nik %>
                    </td>
                    <td scope="row" class="text-center">
                      <%= row.tgl_pindah %>
                    </td>
                    <td scope="row" class="text-center">
                      <%= row.kel_nomor_kk %>
                    </td>
                    <td scope="row" class="text-center">
                      <%= row.alasan %>
                    </td>
                    <!-- <td scope="row" class="text-center" ><%= row.user_password %></td> -->
                    <td scope="row" class="text-center">

                      <!-- menambah JSON.stringify(row) ke atribut data-json untuk diakses dari modal -->
                      <!-- setiap data json memiliki nilai berbeda mengikuti variabel row -->
                      <button type="button" class="border-0" data-bs-toggle="modal" data-bs-target="#exampleModal"
                        data-json="<%= JSON.stringify(row) %>"><i
                          class="fa-solid fa-users-rectangle bg-primary p-2 text-white rounded" data-toggle="tooltip"
                          title="Detail"></i></button>
                      <!-- menambah data-form-action sebagai target / alamat proses untuk 
                      mengubah data setiap data yang memiliki alamat update berbeda -->

                      <!-- <button class="border-0" data-bs-toggle="modal" data-bs-target="#exampleModalEdit">
                       <i class="fa-solid fa-pen-to-square bg-success p-2 text-white rounded"
                              data-toggle="tooltip" title="Edit" data-json="<%= JSON.stringify(row) %>"
                              data-form-action="/data/data-pindah/update/<%= row.id_pindah %>" ></i></button> -->
                             
                              <!-- IT WORKS! -->
                       <button class="border-0" data-bs-toggle="modal" data-bs-target="#exampleModalEdit" data-json="<%= JSON.stringify(row) %>"><i
                          class="fa-solid fa-pen-to-square bg-success p-2 text-white rounded" data-toggle="tooltip"
                          title="Edit"></i></button>

                       <button class="border-0" data-bs-toggle="modal" data-bs-target="#exampleModalDelete" data-json="<%= JSON.stringify(row) %>"><i
                         class="fa-solid fa-trash-can bg-danger p-2 text-white rounded" data-toggle="tooltip"
                         title="Delete"></i></button>
    
                          <!-- <a href="/data/data-penduduk/delete/<%= row.penduduk_nik %>"><button class="border-0"><i
                            class="fa-solid fa-trash-can bg-danger p-2 text-white rounded" data-toggle="tooltip"
                            title="Delete"></i></button></a> -->
                      <% number++; %>
                    </td>
              </tr>
              <% }%>
          </table>
        </div>
    </div>



     <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class=" modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Detail Keluarga</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body table-responsive">
        <table class="table table-bordered no-margin">
          <tbody>
            <!-- <tr>
            <th style="width:50%">Id KK</th>
            <td>KK010202</td>
          </tr> -->
            <tr>
              <th style="width:50%">ID Pindah</th>
              <!-- target binding ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ -->
              <td class="id_pindah" hidden></td>
            </tr>

            <tr>
              <th style="width:50%">Nomor KK</th>
              <td class="kel_nomor_kk"></td>
            </tr>
            <tr>
              <th style="width:50%">Tanggal pindah</th>
              <td class="tgl_pindah"></td>
            </tr>
            <tr>
              <th style="width:50%">NIK</th>
              <td class="penduduk_nik"></td>
            </tr>
            <tr>
              <th style="width:50%">Alasan Pindah</th>
              <td class="alasan"></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
  </div>


    <!-- Modal Delete -->
    <div class="modal fade" id="exampleModalDelete" tabindex="-1" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="mx-auto modal-title" id="exampleModalLabelDelete">Hapus Data - <span
                class="text-danger">Peringatan</span></h5>
            <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <p class="text-justify">Apabila sudah dipastikan penduduk yang anda pilih sudah keluar, silahkan klik hapus
              pada tombol dibawah
              untuk langsung menghapus dari data penduduk
            </p>
          </div>
          <div class="text-center">
             <% for (let row of rows) {%>
            <a href="/data/data-penduduk/delete/<%= row.penduduk_nik %>" class="hapus-penduduk">
              <% }%>
               <button type="button" class="btn btn-danger tooltip-test" title="Delete from penduduk"><i
                  class="bi bi-trash2-fill"></i>&nbsp;Delete</button>
            </a>
          </div> 

           <hr>
          <div class="modal-body">
            <p>Jika input anda salah di data pindah keluar, klik delete dibawah</p>
          </div>
          <div class="text-center mb-4"> 
            <% for (let row of rows) {%>
            <a href="/data/data-pindah/delete/<%= row.id_pindah %> ">
              <% }%>
              <button type="button" class="btn btn-danger tooltip-test" title="Delete in keluar table"><i 
                   class="bi bi-trash2-fill"></i>&nbsp;Delete</button>
            </a>
          </div>
          


          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <!-- <button type="button" class="btn btn-primary">Delete</button> -->
          </div>
        </div>
      </div>
    </div> 
  



    <!-- Modal edit -->

    <div class="modal fade " id="exampleModalEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <form action="" class="form-edit" method="POST">
          <!-- menambah form ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ðŸ”¥ -->
          <div class="modal-content ">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabelEdit">Edit Data Keluarga</h5>
              <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body table-responsive">
              <table class="table table-bordered no-margin">
                <tbody>
                  <tr>
                    <th style="width:50%">ID Pindah</th>
                    <td>
                      <!-- menambah target binding berdasarkan atribut name -->
                      <input type="number" name="id_pindah" class="form-control" disabled hidden />
                    </td>
                  </tr>
            
                  <tr>
                    <th style="width:50%">Nomor KK</th>
                    <td>
                      <input type="number" name="kel_nomor_kk" class="form-control" /> 
                    </td>
                  </tr>

                  <tr>
                    <th style="width:50%">Tanggal Pindah</th>
                    <td>
                      <input type="date" name="tgl_pindah" class="form-control" />
                    </td>
                  </tr>
                  <tr>
                    <th style="width:50%">NIK</th>
                    <td>
                      <input type="number" name="penduduk_nik" class="form-control" />
                    </td>
                  </tr>
                  <tr>
                    <th style="width:50%">Alasan Pindah</th>
                    <td>
                      <input type="text" name="alasan" class="form-control" />
                    </td>
                  </tr>

                </tbody>
              </table>


            </div>

            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Simpan</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
      </div>
      </form>
    </div>


